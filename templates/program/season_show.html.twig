{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <img src="{{ program.poster }}" width="300" alt="{{ program.title }}">
    <p>Catégorie : {{ program.category.name }}</p>
    <h2>{{ seasons.description }} </h2>
  </div>
</div>


<h2>Listes épisodes: </h2>
    {% for episode in episodes %}
        <div>
            <h2>Episode {{episode.number}} - {{ episode.title }} </h2>
        </div>
    {% else %}
        Aucune série trouvée.</br>
    {% endfor %}

<a href="{{ path('program_show', { id: program.id }) }}"> Retour à la liste des saisons</a></br>

<a href="{{ path('program_index') }}"> Retour à la liste des programmes</a>

{% endblock %}