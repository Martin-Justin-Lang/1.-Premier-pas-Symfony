{% extends 'base.html.twig' %}

{% block title %}Série #{{ category.name }}{% endblock %}

{% block body %}

{% for program in programs %}

     <div>
        <a href="{{ path("program_show", { slug: program.slug }) }}">
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
        </a>
        <p>{{ program.summary }}</p>
    </div>

{% endfor %}


<a href="{{ path('category_index') }}">
    Retour à la liste des catégories
</a>

{% endblock %}